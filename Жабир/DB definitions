(
account_id integer not null primary key AUTOINCREMENT,
account_name varchar(20) not null, 
protocol_id integer not null, 
server varchar(50) not null, 
other_port integer, 
username varchar(30), 
password varchar(30), 
secure bool,
resource varchar(30), 
domain varchar(50), 
enabled bool
);



